    <modelVersion>4.0.0</modelVersion>
    <groupId>fr.unice.polytech.ctlms</groupId>
    <artifactId>ctlms</artifactId>
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>AL :: Groupe 2 :: Central Traffic Light Management Server</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <versions.tomee.embedded>1.7.3</versions.tomee.embedded>
        <versions.openjpa>2.4.1</versions.openjpa>
        <versions.myface>2.2.10</versions.myface>
